<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <typeAliases>
    <typeAlias type="com.web.hyun.account.db.AccountVO" alias="account" />
    <typeAlias type="com.web.hyun.board.db.BoardVO" alias="board" />
    <typeAlias type="com.web.hyun.board.db.BoardItemVO" alias="boarditem" />
    <typeAlias type="com.web.hyun.board.db.BoardTypeVO" alias="boardtype" />
    <typeAlias type="com.web.hyun.board.comment.db.CommentVO" alias="comment" />
  </typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
        <property name="username" value="webfinal"/>
        <property name="password" value="webfinal"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="resources/mapper/account.xml"/>
    <mapper resource="resources/mapper/board.xml"/>
    <mapper resource="resources/mapper/comment.xml"/>
  </mappers>
</configuration>